#!/system/bin/sh

# Move dalvik-cache to /cache

if [ ! -d /cache/dalvik-cache ]
then
	/system/xbin/busybox rm -rf /cache/dalvik-cache /data/dalvik-cache
	mkdir /cache/dalvik-cache /data/dalvik-cache
fi

/system/xbin/busybox chown 1000:1000 /cache/dalvik-cache
/system/xbin/busybox chmod 0771 /cache/dalvik-cache

# bind mount dalvik-cache 
/system/xbin/busybox mount -o bind /cache/dalvik-cache /data/dalvik-cache
/system/xbin/busybox chown 1000:1000 /data/dalvik-cache
/system/xbin/busybox chmod 0771 /data/dalvik-cache
